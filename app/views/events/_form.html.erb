<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :summary %>
    <%= f.input :date_on, as: :date, html5: true %>
  </div>

  <div class="form-actions">
    <%= bootstrap_form_button(f) %>
  </div>
<% end %>
