<% provide(:title, controller_name) %>

<div class="page-header">
  <h2>イベント<small>詳細</small></h2>
</div>

<p class="link-action">
  <%= link_to 'イベント一覧', events_path %>
  <%= link_to '編集', edit_event_path(@event) %>
  <%= link_to '削除', @event, method: :delete, data: {confirm: 'Are you sure?'} %>
</p>

<dl class="dl-horizontal">
  <dt>実施日:</dt><dd><%= @event.date_on %></dd>
  <dt>イベント名:</dt><dd><%= @event.name %></dd>
  <dt>種別:</dt><dd><%= @event.category %></dd>
  <dt>概要:</dt><dd><%= auto_link_text(@event.summary) %></dd>
</dl>

<blockquote>
  <p>このイベントのリード</p>
</blockquote>

<p class="link-action">
  <%= link_to '新規作成', new_lead_path(event_id: @event) %>
  <%= link_to 'インポート', new_import_leads_path(event_id: @event) %>
  <%= link_to 'エクスポート', export_event_leads_path(@event, format: 'csv') %>
</p>

<div class="table-responsive">
  <table class="table table-condensed table-hover">
    <thead>
    <tr>
      <th></th>
      <th>会社名</th>
      <th>部署名</th>
      <th>役職</th>
      <th>氏名</th>
      <th>きっかけ</th>
      <th>メモ</th>
    </tr>
    </thead>

    <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td class="td-action"><%= link_to '詳細', lead %></td>
        <td><%= lead.company_name %></td>
        <td><%= lead.department %></td>
        <td><%= lead.title %></td>
        <td><%= lead.name %></td>
        <td><%= lead.trigger %></td>
        <td><%= lead.memo %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
