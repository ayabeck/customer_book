<div class="table-responsive">
  <table class="table table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Summary</th>
      <th>Date on</th>
    </tr>
    </thead>

    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.category %></td>
        <td><%= event.summary %></td>
        <td><%= event.date_on %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= paginate @events %>
</div>
