<% provide(:title, controller_name) %>

<div class="page-header">
  <h1>Events</h1>
</div>

<p class="link-action">
  <%= link_to 'New Event', new_event_path %>
  <%= link_to 'Import', '#' %>
  <%= link_to 'Export', '#' %>
</p>

