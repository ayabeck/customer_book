<% provide(:title, controller_name) %>

<div class="page-header">
  <h2>イベント<small>一覧</small></h2>
</div>

<p class="link-action">
  <%= link_to '新規作成', new_event_path %>
  <%= link_to 'インポート', '#' %>
  <%= link_to 'エクスポート', events_path(format: 'csv') %>
</p>

<div class="table-responsive">
  <table class="table table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th>実施日</th>
      <th>イベント名</th>
      <th>種別</th>
      <th>概要</th>
      <th>リード数</th>
    </tr>
    </thead>

    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class="td-date"><%= event.date_on %></td>
        <td><%= link_to event.name, event %></td>
        <td><%= event.category %></td>
        <td><%= event.summary %></td>
        <td class="td-num"><%= event.leads.count %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= paginate @events %>
</div>
