<%= simple_form_for([@lead, @contact]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date_on, as: :date, html5: true %>
    <%= f.input :content, input_html: { rows: 5 } %>
    <%= f.input :means, as: :select, collection: ["メール", "電話", "訪問", "その他"] %>
    <%= f.input :owner %>
  </div>

  <div class="form-actions">
    <%= bootstrap_form_button(f) %>
  </div>
<% end %>
