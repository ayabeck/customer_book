<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :business_type %>
    <%= f.input :outline, input_html: { rows: 5 } %>
  </div>

  <div class="form-actions">
    <%= bootstrap_form_button(f) %>
  </div>
<% end %>
