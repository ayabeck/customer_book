<%= simple_form_for([@event, @lead]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name %>
    <%= f.input :department %>
    <%= f.input :title %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :date_on, as: :date, html5: true %>
    <%= f.input :trigger %>
    <%= f.input :memo %>
    <%= f.association :events, collection: Event.selectable,
                      multiple: true, include_blank: true, input_html: { size: 10 } %>
  </div>

  <div class="form-actions">
    <%= bootstrap_form_button(f) %>
  </div>
<% end %>
